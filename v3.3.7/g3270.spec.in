%clean
rm -rf $RPM_BUILD_ROOT

%files
%defattr(-,root,root)
%{_bindir}
%{_datadir}/applications
%{_datadir}/locale

%{_datadir}/%{name}/*.xml
%{_datadir}/%{name}/*.jpg

%config(noreplace) %{_datadir}/%{name}/*.conf

%files lib
%defattr(-,root,root)
%{_libdir}



