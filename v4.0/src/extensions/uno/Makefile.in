#---[ OpenOffice Tools ]-------------------------------------------------------------------------------------------

IDLC ?= @IDLC@
CPPUMAKER ?= @CPPUMAKER@
REGMERGE ?= @REGMERGE@
REGCOMP ?= @REGCOMP@

#---[ Release Rules ]----------------------------------------------------------------------------------------------

Release: @PACKAGE@.oxt

@OBJRLSDIR@%.o: %.cxx @SRCDIR@*.hpp @SRCDIR@inc/$(OWNER_PATH)/$(INTF_NAME).hpp
	@echo $< ...
	@mkdir -p `dirname $@`
	@$(CXX) -DNDEBUG=1 $(CXXFLAGS) $(OO_CXXFLAGS) $(G3270_CFLAGS) -o $@ -c $<

@BINRLSDIR@$(COMP_IMPL_NAME): $(foreach OBJ, $(CXX_FILES), @OBJRLSDIR@@SRCDIR@$(basename $(OBJ)).o)
	@echo $@ ...
	@mkdir -p `dirname $@`
	@$(CXX) $(OO_LDFLAGS) $(G3270_LFLAGS) @OS_DLLFLAGS@ -o $@ $^

%.oxt: @BINRLSDIR@$(COMP_IMPL_NAME) @SRCDIR@$(COMP_NAME).uno.rdb description.xml manifest.xml
	@echo $@
	@rm -fr build.tmp
	@mkdir -p build.tmp/META-INF
	@cp manifest.xml build.tmp/META-INF
	@cp description.xml build.tmp
	@cp description.txt build.tmp
	@cp uno3270.png build.tmp
	@cp @BINRLSDIR@$(COMP_IMPL_NAME) build.tmp
	@cp @SRCDIR@$(COMP_NAME).uno.rdb build.tmp
	@cd build.tmp ; zip -m -r ../$@ .
	@echo $@ Ok.

#---[ Debug Rules ]------------------------------------------------------------------------------------------------

Debug: @BINDBGDIR@$(COMP_NAME)@EXEEXT@

install-debug: @BINDBGDIR@$(COMP_IMPL_NAME) @SRCDIR@$(COMP_NAME).uno.rdb
	@cp -f @BINDBGDIR@$(COMP_IMPL_NAME) $(DESTDIR)/$(OO_PROGRAM_DIR)
	@cp -f @SRCDIR@$(COMP_NAME).uno.rdb $(DESTDIR)/$(OO_PROGRAM_DIR)/$(COMP_NAME).uno.rdb
	@$(REGCOMP) -register -r $(DESTDIR)/$(OO_PROGRAM_DIR)/$(COMP_NAME).uno.rdb -c $(DESTDIR)/$(OO_PROGRAM_DIR)/$(COMP_IMPL_NAME)
	@echo "@BINDBGDIR@$(COMP_IMPL_NAME) @SRCDIR@$(COMP_NAME).uno.rdb -> $(OO_PROGRAM_DIR)"

@BINDBGDIR@$(COMP_NAME)@EXEEXT@: @OBJDBGDIR@@SRCDIR@test_program.o @BINDBGDIR@$(COMP_IMPL_NAME)
	@echo $@ ...
	@mkdir -p `dirname $@`
	$(CXX) $(OO_LDFLAGS) -L$(OO_SDK_HOME)/lib -luno_cppuhelpergcc3 -L./bin/Debug @BINDBGDIR@$(COMP_IMPL_NAME) -o $@ @OBJDBGDIR@@SRCDIR@test_program.o

@OBJDBGDIR@%.o: %.cxx @SRCDIR@*.hpp @SRCDIR@inc/$(OWNER_PATH)/$(INTF_NAME).hpp
	@echo $< ...
	@mkdir -p `dirname $@`
	@$(CXX) -DDEBUG=1 $(CXXFLAGS) $(OO_CXXFLAGS) $(G3270_CFLAGS) -ggdb -o $@ -c $<

@BINDBGDIR@$(COMP_IMPL_NAME): $(foreach OBJ, $(CXX_FILES), @OBJDBGDIR@@SRCDIR@$(basename $(OBJ)).o)
	@echo $@ ...
	@mkdir -p `dirname $@`
	@$(CXX)  $(G3270_LFLAGS) @OS_DLLFLAGS@ -o $@ $^ $(OO_LDFLAGS)

run: @BINDBGDIR@$(COMP_NAME)@EXEEXT@
	@LD_LIBRARY_PATH=$(OO_SDK_HOME)/ure/lib:$(OFFICE_HOME)/ure/lib:bin/Debug @BINDBGDIR@$(COMP_NAME)

test: install-debug
	$(OFFICE_PROGRAM)

#---[ Uno Rules ]--------------------------------------------------------------------------------------------------

@SRCDIR@$(COMP_NAME).uno.rdb : @SRCDIR@$(COMP_NAME).urd
	@echo $< ...
	@rm -f $@
	@$(REGMERGE) $@ / @TYPES_RDB@
	@$(REGMERGE) $@ /UCR $<
	@$(REGMERGE) $@ / $<

@SRCDIR@$(COMP_NAME).urd: @SRCDIR@$(COMP_NAME).idl Makefile
	@echo $< ...
	@$(IDLC) -C -I. -I$(OO_SDK_HOME)/idl -Osrc $<

@SRCDIR@inc/$(OWNER_PATH)/$(INTF_NAME).hpp: @SRCDIR@$(COMP_NAME).uno.rdb
	@rm -fr @SRCDIR@inc
	@mkdir -p @SRCDIR@inc
	@cd @SRCDIR@inc ; $(CPPUMAKER) -Gc -L -BUCR ../$(COMP_NAME).uno.rdb

#---[ Misc Rules ]-------------------------------------------------------------------------------------------------

%.zip: clean
	@rm -f $@
	@zip -9 -r $@ .

tgz: @PACKAGE@-@PACKAGE_VERSION@.tar.gz

@PACKAGE@-@PACKAGE_VERSION@.tar.gz: clean
	@echo $@ ...
	@find . -name "stamp-h1" -exec mv -f {} $(TMPDIR) \;
	@rm -fr $(TMPDIR)/@PACKAGE@-@PACKAGE_VERSION@

	@mkdir -p $(TMPDIR)/@PACKAGE@-@PACKAGE_VERSION@
	@cp aclocal.m4 $(TMPDIR)/@PACKAGE@-@PACKAGE_VERSION@
	@cp AUTHORS $(TMPDIR)/@PACKAGE@-@PACKAGE_VERSION@
	@cp configure.ac $(TMPDIR)/@PACKAGE@-@PACKAGE_VERSION@
	@cp *.in $(TMPDIR)/@PACKAGE@-@PACKAGE_VERSION@
	@cp description.txt $(TMPDIR)/@PACKAGE@-@PACKAGE_VERSION@
	@cp uno3270.png $(TMPDIR)/@PACKAGE@-@PACKAGE_VERSION@

	@mkdir -p $(TMPDIR)/@PACKAGE@-@PACKAGE_VERSION@/src
	@cp -R @SRCDIR@* $(TMPDIR)/@PACKAGE@-@PACKAGE_VERSION@/src

	@mkdir -p $(TMPDIR)/@PACKAGE@-@PACKAGE_VERSION@/scripts
	@cp -R scripts/* $(TMPDIR)/@PACKAGE@-@PACKAGE_VERSION@/scripts

	@rm -f @PACKAGE@-@PACKAGE_VERSION@.tar.gz
	@tar --create --gzip --verbose --directory=$(TMPDIR) --exclude=.svn --file=@PACKAGE@-@PACKAGE_VERSION@.tar.gz @PACKAGE@-@PACKAGE_VERSION@

rpm: @PACKAGE@-@PACKAGE_VERSION@.tar.gz
	mkdir -p `rpm --eval="%{u2p:%{_sourcedir}}"`
	cp @PACKAGE@-@PACKAGE_VERSION@.tar.gz `rpm --eval="%{u2p:%{_sourcedir}}"`
	rpmbuild -ba OpenOffice-3270.spec

#---[ Targets ]----------------------------------------------------------------------------------------------------

clean:
	@rm -fr obj
	@rm -fr bin
	@rm -fr @SRCDIR@inc
	@rm -fr build.tmp
	@rm -f @PACKAGE@-@PACKAGE_VERSION@.tar.gz
	@rm -f @PACKAGE@.oxt
	@rm -fr build.tmp
	@find . -name "*.save" -exec mv -f {} $(TMPDIR) \;
	@find . -name "*~" -exec mv -f {} $(TMPDIR) \;
	@find . -name "*.bak" -exec mv -f {} $(TMPDIR) \;
	@find . -name "*.log" -exec mv -f {} $(TMPDIR) \;
	@find . -name "leak.out" -exec mv -f {} $(TMPDIR) \;
	@find . -name "*.urd" -exec mv -f {} $(TMPDIR) \;
	@find . -name "*.rdb" -exec mv -f {} $(TMPDIR) \;
	@find . -name "*.tmp" -exec mv -f {} $(TMPDIR) \;


