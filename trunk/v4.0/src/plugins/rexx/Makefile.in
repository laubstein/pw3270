MODULE_NAME ?= rx3270
SOURCES = main.c actions.c gui.c screen.c toggle.c tools.c init.c network.c

BINROOT ?= ../../../bin
OBJDEBUG ?= ../../../obj/Debug/src/plugins/rexx
BINDEBUG ?= $(BINROOT)/Debug/plugins
OBJRELEASE ?= ../../../obj/Release/src/plugins/rexx
BINRELEASE ?= $(BINROOT)/Release/plugins

CC = @CC@
LD = @LD@
DLLEXT = @DLLEXT@

# Set compile/link parameters
ifeq  ($(DLLEXT),.dll)
	DLLFLAGS = @REXX_LIBS@ @GTK_LIBS@ @OS_DLLFLAGS@ -Wl,--exclude-symbols,REXXAPI_NULL_THUNK_DATA -Wl,--exclude-symbols,rexx_NULL_THUNK_DATA
else
	DLLFLAGS = @REXX_LIBS@ @GTK_LIBS@ @OS_DLLFLAGS@
endif

CFLAGS = -g -Wall @REXX_CFLAGS@ @GTK_CFLAGS@ @OS_CFLAGS@ -O -I../../include

# Rules

$(OBJDEBUG)/%.o: %.c Makefile
	@mkdir -p `dirname $@`
	@$(CC) -DDEBUG=1 $(CFLAGS) -ggdb -o $@ -c $<

$(OBJRELEASE)/%.o: %.c Makefile
	@mkdir -p `dirname $@`
	@$(CC) -DNDEBUG=1 $(CFLAGS) -ggdb -o $@ -c $<

# Targets

$(BINDEBUG)/$(MODULE_NAME)$(DLLEXT): $(foreach SRC, $(SOURCES), $(OBJDEBUG)/$(basename $(SRC)).@OBJEXT@)
	@echo $@ ...
	@mkdir -p `dirname $@`
	@$(CC) -o $@ $^ -L$(BINROOT)/Debug -l3270 $(DLLFLAGS)

$(BINRELEASE)/$(MODULE_NAME)$(DLLEXT): $(foreach SRC, $(SOURCES), $(OBJDEBUG)/$(basename $(SRC)).@OBJEXT@)
	@echo $@ ...
	@mkdir -p `dirname $@`
	@$(LD) @LD_RLSFLAGS@ -o $@ $^ -L$(BINROOT)/Release -l3270 $(DLLFLAGS)

clean:
	@find . -name "*.save" -exec mv -f {} $(TMPDIR) \;
	@find . -name "*~" -exec mv -f {} $(TMPDIR) \;
	@find . -name "*.bak" -exec mv -f {} $(TMPDIR) \;
	@find . -name "*.log" -exec mv -f {} $(TMPDIR) \;
	@find . -name "leak.out" -exec mv -f {} $(TMPDIR) \;
	@find . -name "*.tmp" -exec mv -f {} $(TMPDIR) \;
	@rm -f $(BINDEBUG)/$(MODULE_NAME).@DLLEXT@
	@rm -f $(BINRELEASE)/$(MODULE_NAME).@DLLEXT@
	@rm -f $(OBJRELEASE)/*.@OBJEXT@
	@rm -f $(OBJDEBUG)/*.@OBJEXT@

