MODULE_NAME ?= rx3270
OBJDEBUG ?= ../../../obj/Debug/src/plugins/rexx
BINDEBUG ?= ../../../bin/Debug/plugins
OBJRELEASE ?= ../../../obj/Release/src/plugins/rexx
BINRELEASE ?= ../../../bin/Release/plugins

# OS Stuff
@CROSS@


# Set command paths and mkfb (which has to run locally)
MKFB = mkfb
CC = @CC@

# Set compile/link parameters
windows-dllflags=-Wl,--export-all-symbols -Wl,--enable-auto-import
CFLAGS = @EXTRA_FLAGS@ -g -Wall @GTK_CFLAGS@ @REXX_CFLAGS@ -O -I../../include
DLLFLAGS = @EXTRA_FLAGS@ @REXX_LIBS@ @GTK_LIBS@ -shared $(@host_os@-dllflags)

SOURCES = main.c

# Rules

$(OBJDEBUG)/%.o: %.c Makefile
	@mkdir -p `dirname $@`
	@$(CC) -DDEBUG=1 $(CFLAGS) -ggdb -o $@ -c $<

$(OBJRELEASE)/%.o: %.c Makefile
	@mkdir -p `dirname $@`
	@$(CC) -DNDEBUG=1 $(CFLAGS) -ggdb -o $@ -c $<

# Targets

$(BINDEBUG)/$(MODULE_NAME).@DLLEXT@: $(foreach SRC, $(basename $(SOURCES)), $(OBJDEBUG)/$(SRC).@OBJEXT@)
	@echo $@ ...
	@mkdir -p `dirname $@`
	@$(CC) -o $@ $^ $(DLLFLAGS)

$(BINRELEASE)/$(MODULE_NAME).@DLLEXT@: $(foreach SRC, $(basename $(SOURCES)), $(OBJRELEASE)/$(SRC).@OBJEXT@)
	@echo $@ ...
	@mkdir -p `dirname $@`
	@$(CC) -o $@ $^ $(DLLFLAGS)

clean:
	@find . -name "*.save" -exec mv -f {} $(TMPDIR) \;
	@find . -name "*~" -exec mv -f {} $(TMPDIR) \;
	@find . -name "*.bak" -exec mv -f {} $(TMPDIR) \;
	@find . -name "*.log" -exec mv -f {} $(TMPDIR) \;
	@find . -name "leak.out" -exec mv -f {} $(TMPDIR) \;
	@find . -name "*.tmp" -exec mv -f {} $(TMPDIR) \;
