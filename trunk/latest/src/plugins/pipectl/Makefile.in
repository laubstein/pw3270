#---[ Configuration values ]---------------------------------------------------

PACKAGE_NAME=@PACKAGE_NAME@
MODULE_NAME=pipectl

prefix=@prefix@
exec_prefix=@exec_prefix@
libdir=@libdir@
bindir=@bindir@
datarootdir=@datarootdir@

STRIP=@STRIP@
MSGCAT=@MSGCAT@
XGETTEXT=@XGETTEXT@

INSTALL=@INSTALL@
INSTALL_EXE=$(INSTALL) --mode=755
INSTALL_DATA=$(INSTALL) --mode=644
INSTALL_CLS=$(INSTALL) --mode=644

BINDIR=@BINDIR@
OBJDIR=@OBJDIR@
SRCDIR=@SRCDIR@

OBJDBG=$(OBJDIR)/Debug/plugins/$(MODULE_NAME)
BINDBG=$(BINDIR)/Debug/plugins

OBJRLS=$(OBJDIR)/Release/plugins/$(MODULE_NAME)
BINRLS=$(BINDIR)/Release/plugins

CC = @CC@
LD = @LD@
HOST_CC = @HOST_CC@

DBG_CFLAGS=-DDEBUG=1
RLS_CFLAGS=-DNDEBUG=1

LIB3270_CFLAGS ?= `pkg-config --cflags pw3270`
LIB3270_LIBS ?= `pkg-config --libs pw3270`

CFLAGS=@CFLAGS@ $(REXX_CFLAGS)
LDFLAGS=@DLL_LDFLAGS@ @LDFLAGS@

GLIB_CFLAGS=@GLIB_CFLAGS@
GLIB_LIBS=@GLIB_LIBS@

#---[ Sources ]----------------------------------------------------------------

SOURCES = commands.c init.c pipesource.c

#---[ Rules ]------------------------------------------------------------------

$(OBJDBG)/%@OBJEXT@: %.c *.h
	@echo $< ...
	@mkdir -p `dirname $@`
	@$(CC) $(DBG_CFLAGS) $(CFLAGS) $(LIB3270_CFLAGS) $(GLIB_CFLAGS) -o $@ -c $<

$(OBJRLS)/%@OBJEXT@: %.c *.h
	@echo $< ...
	@mkdir -p `dirname $@`
	@$(CC) $(RLS_CFLAGS) $(CFLAGS) $(LIB3270_CFLAGS) $(GLIB_CFLAGS) -o $@ -c $<

#---[ Targets ]----------------------------------------------------------------

$(BINDIR)/Debug/plugins/$(MODULE_NAME)@DLLEXT@: $(foreach SRC, $(basename $(COMMON_SRC) $(PLUGIN_SRC)), $(OBJDBG)/$(SRC)@OBJEXT@)
	@echo $@ ...
	@mkdir -p `dirname $@`
	@$(LD) $(LDFLAGS) $(LIB3270_LIBS) -o $@ $^ $(GLIB_LIBS)
	@rm -f $(basename \$(@F)).a
	@rm -f $(basename \$(@F)).def

$(BINDIR)/Release/plugins/$(MODULE_NAME)@DLLEXT@: $(foreach SRC, $(basename $(COMMON_SRC) $(PLUGIN_SRC)), $(OBJRLS)/$(SRC)@OBJEXT@)
	@echo $@ ...
	@mkdir -p `dirname $@`
	@$(LD) $(LDFLAGS) $(LIB3270_LIBS) -o $@ $^ $(GLIB_LIBS)
	@rm -f $(basename \$(@F)).a
	@rm -f $(basename \$(@F)).def
	@$(STRIP) $@

clean:
	@rm -fr .tmp


