#---[ Configuration values ]---------------------------------------------------

PACKAGE=@PACKAGE@

JAVAC=@JAVAC@
JAVAH=@JAVAH@
STRIP=@STRIP@
JAR=@JAR@

prefix=@prefix@
exec_prefix=@exec_prefix@
libdir=@libdir@
JNIDIR=@JNIDIR@
JARDIR=@JARDIR@
JVMDIR=@JVMDIR@

DEBDIR ?= debian
TMPDIR ?= .tmp

INSTALL=@INSTALL@
INSTALL_EXE=$(INSTALL) --mode=755
INSTALL_DATA=$(INSTALL) --mode=644

OBJDBG=@OBJDIR@/Debug/jni
BINDBG=@BINDIR@/Debug

OBJRLS=@OBJDIR@/Release/jni
BINRLS=@BINDIR@/Release
BINDIR=@BINDIR@

JDK_HOME=@JDK_HOME@
JRE_HOME=@JRE_HOME@

CC = @CC@
LD = @LD@

DBG_CFLAGS=-DDEBUG=1
RLS_CFLAGS=-DNDEBUG=1

CFLAGS=@CFLAGS@ @JNI_CFLAGS@
LDFLAGS=@DLL_LDFLAGS@ @LDFLAGS@ @JNI_LIBS@

LIB3270_CFLAGS ?= `pkg-config --cflags pw3270`
LIB3270_LIBS ?= `pkg-config --libs pw3270`

#---[ Sources ]----------------------------------------------------------------

SOURCES=pw3270_jni.c

#---[ Rules ]------------------------------------------------------------------

$(OBJDBG)/%@OBJEXT@: %.c
	@echo $< ...
	@mkdir -p `dirname $@`
	@$(CC) $(DBG_CFLAGS) $(CFLAGS) $(LIB3270_CFLAGS) -o $@ -c $<

$(BINRLS)/$(PACKAGE).jar: $(BINDIR)/java/$(PACKAGE)/terminal.class
	@echo $@ ...
	@mkdir -p `dirname $@`
	@jar -cvf "$@" -C "$(BINDIR)/java" "$(PACKAGE)"

$(OBJRLS)/%@OBJEXT@: %.c
	@echo $< ...
	@mkdir -p `dirname $@`
	@$(CC) $(RLS_CFLAGS) $(CFLAGS) $(LIB3270_CFLAGS) -o $@ -c $<

%.class: %.java
	@echo $< ...
	@mkdir -p `dirname $@`
	@$(JAVAC) -cp bin/java -sourcepath `dirname $^` -d `dirname $@` $^

$(BINDIR)/java/$(PACKAGE)/%.class: %.java
	@echo $< ...
	@mkdir -p `dirname $@`
	@$(JAVAC) -cp $(BINDIR)/java -sourcepath $(PWD) -d $(BINDIR)/java $^

lib3270_jni.h: $(BINDIR)/java/$(PACKAGE)/terminal.class
	@echo $< ...
	@mkdir -p `dirname $@`
	@$(JAVAH) -o $@ -classpath $(BINDIR)/java $(PACKAGE).terminal

#---[ Targets ]----------------------------------------------------------------

$(BINDIR)/Debug/libpw3270_jni@DLLEXT@:  $(foreach SRC, $(basename $(SOURCES)), $(OBJDBG)/$(SRC)@OBJEXT@)
	@mkdir -p `dirname $@`
	@$(LD) $(LDFLAGS) $(LIB3270_LIBS) -o $@ $^

$(BINDIR)/Release/libpw3270_jni@DLLEXT@:  $(foreach SRC, $(basename $(SOURCES)), $(OBJRLS)/$(SRC)@OBJEXT@)
	@mkdir -p `dirname $@`
	@$(LD) $(LDFLAGS) $(LIB3270_LIBS) -o $@ $^
	@$(STRIP) $@

$(TMPDIR)/control-jni: control
	@echo $@ ...
	@mkdir -p `dirname $@`
	@cp control "$@"

install: $(BINDIR)/Release/libpw3270_jni@DLLEXT@ $(BINRLS)/$(PACKAGE).jar
	@mkdir -p $(DESTDIR)/$(JNIDIR)
	@$(INSTALL_EXE) $(BINDIR)/Release/libpw3270_jni@DLLEXT@ $(DESTDIR)/$(JNIDIR)

	@mkdir -p $(DESTDIR)/$(JARDIR)
	@$(INSTALL_DATA) $(BINRLS)/$(PACKAGE).jar $(DESTDIR)/$(JARDIR)

clean:
	@rm -f lib3270_jni.h
	@rm -fr .tmp
