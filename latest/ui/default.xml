<ui>
	<menubar name='topmenu'>

		<menu name='FileMenu'>
			<menuitem action='SaveScreen' group='online'/>
			<menuitem action='SaveSelected' group='selection' />
			<menuitem action='SaveClipboard' group='clipboard' />
			<separator/>
			<menuitem action='PrintScreen' key='Print' icon='print' group='online' />
			<menuitem action='PrintSelected' group='selection' />
			<menuitem action='PrintClipboard' group='clipboard' />
			<separator/>
			<menu action='FTMenu' group='filetransfer' >
				<menuitem action='Download' key='<alt>d' group='filetransfer' />
				<menuitem action='Upload' key='<alt>u' group='filetransfer' />
			</menu>
			<menuitem action='Quit' key='<ctrl>q' icon="quit" />
		</menu>

		<menu name='EditMenu'>
			<menuitem action='Copy' key='<ctrl>c' icon='copy' group='selection' />
			<menuitem action='CopyAsTable' key='<ctrl><alt>c' group='selection' />
			<menuitem action='CopyAsImage' group='selection' />
			<menuitem action='Append' key='<shift><ctrl>c' group='selection' />
			<menuitem action='Paste' key='<ctrl>v' icon='paste' group='paste' />
			<menuitem action='PasteNext' key='<shift><ctrl>v' />
			<menuitem action='PasteTextFile' group='online' />

			<separator/>
			<menuitem action='SelectAll' key='<ctrl>a' icon='select-all' group='online' />

			<menuitem action='SelectField' key='<Ctrl>f' group='online' />
			<menuitem action='Unselect' group='online'/>
			<menuitem action='Reselect' group='online'/>

			<separator/>
			<menuitem action='Clear' group='online' key='Pause' />
			<menuitem action='EraseInput' icon='clear' group='online' />
<!---			<menuitem action='EraseField' key='<Ctrl>u' group='online' /> -->
			<menuitem action='EraseEOF' group='online' />
			<menuitem action='EraseEOL' group='online'/>
		</menu>

		<!--- Special action - View menu will be populated with labeled toolbars, menubars and keypads --->
		<menu name='View' label='_View' />

		<menu name='ScriptsMenu' />

		<menu name='NetworkMenu'>
			<menuitem action='SetHostname' icon='home' group='offline' />
			<menuitem action='Connect' icon='connect' group='offline' />
			<menuitem action='Disconnect' icon='disconnect' group='online' />
		</menu>

		<menu name='SettingsMenu'>
			<menuitem action='SelectColors' icon='select-color' />

			<!--- Special action - The fontselect menu will be populated with all available monospaced fonts --->
			<menuitem name='fontselect' icon='select-font' label='Select font' />

			<menu action='OptionsMenu'>
				<menuitem action='Toggle' id='AutoConnect' />
				<menuitem action='Toggle' id='CursorBlink' />
				<menuitem action='Toggle' id='Monocase' />
				<menuitem action='Toggle' id='CursorPos'  />
				<menuitem action='Toggle' id='FullScreen' key='<alt>Home' />
				<menuitem action='Toggle' id='MarginedPaste'  />
				<menuitem action='Toggle' id='CrossHair' key='<alt>x' />
				<menuitem action='Toggle' id='BlankFill' />
				<menuitem action='Toggle' id='RectSelect'  />
				<menuitem action='Toggle' id='Reconnect'  />
				<menuitem action='Toggle' id='Bold'  />
				<menuitem action='Toggle' id='Underline'  />
				<menuitem action='Toggle' id='KeepSelected' />
				<menuitem action='Toggle' id='SmartPaste' />
			</menu>

			<!--- Special action - InputMethod menu will be populated with Gtk input_method menu items --->
			<menuitem name='InputMethod' label='Input method' />

		</menu>

		<menu name='HelpMenu'>
			<menuitem action='About' icon='about' />
		</menu>

	</menubar>

	<toolbar name='toolbar.default' label='Toolbar' key='<alt>t' >
		<toolitem action='SelectAll' />
		<toolitem action='Copy' />
		<toolitem action='Paste' />
		<toolitem action='EraseInput' />

		<separator/>
		<toolitem action='Connect' />
		<toolitem action='Disconnect' />

		<separator/>
		<toolitem action='ToggleSet' id='FullScreen' icon='fullscreen' />
		<toolitem action='ToggleReset' id='FullScreen' icon='leave-fullscreen' />
		<toolitem action='SelectColors' />
		<toolitem action='PrintScreen' />
		<toolitem action='Quit' />
	</toolbar>

	<popup name='selectionpopup'>
		<menuitem action='Copy'/>
		<menuitem action='Append'/>
		<menuitem action='Unselect'/>
		<menuitem action='SelectAll'/>

		<separator/>
		<menuitem action='PrintScreen'/>
		<menuitem action='PrintSelected'/>
		<menuitem action='PrintClipboard'/>

		<separator/>
		<menuitem action='Quit'/>
	</popup>

	<popup name='defaultpopup'>
		<menuitem action='Paste'/>
		<menuitem action='PasteNext'/>
		<menuitem action='SelectAll'/>
		<menuitem action='PrintScreen'/>
		<menuitem action='PrintClipboard'/>

		<separator/>
		<menuitem action='PreviousField' />
		<menuitem action='NextField'/>
		<menuitem action='Return'/>

		<separator/>
		<menuitem action='Quit'/>

	</popup>

	<accelerator action='Toggle' id='Insert' key='Insert' group='online' />

	<accelerator action='Home' key='Home' group='online' />
	<accelerator action='Reset' key='<Ctrl>r' group='online' />
	<accelerator action='Return' key='Return' />
	<accelerator action='Enter' key='KP_Enter' />
	<accelerator action='Escape' key='Escape' group='online' />
	<accelerator action='DeleteWord' key='<Ctrl>w' group='online' />
	<accelerator action='Delete' key='Delete' group='online' />
	<accelerator action='Erase' key='BackSpace' group='online' />
	<accelerator action='EraseEOF' key='End' group='online' />

	<accelerator action='SysREQ' key='Sys_Req' group='online' />
	<accelerator action='SysREQ' key='<shift>Print' group='online' />

	<accelerator action='SelectRight' key='<Shift>Right' group='online' />
	<accelerator action='SelectLeft' key='<Shift>Left' group='online' />
	<accelerator action='SelectUp' key='<Shift>Up' group='online' />
	<accelerator action='SelectDown' key='<Shift>Down' group='online' />

	<accelerator action='SelectionRight' key='<alt>Right' />
	<accelerator action='SelectionLeft' key='<alt>Left' />
	<accelerator action='SelectionUp' key='<alt>Up' />
	<accelerator action='SelectionDown' key='<alt>Down' />

	<accelerator action='CursorRight' key='Right' group='online' />
	<accelerator action='CursorLeft' key='Left' group='online' />
	<accelerator action='CursorUp' key='Up' group='online' />
	<accelerator action='CursorDown' key='Down' group='online' />

	<accelerator action='PreviousField' key='ISO_Left_Tab' group='online' />
	<accelerator action='NextField' key='Tab' group='online' />

	<!--- Mouse actions --->
	<scroll direction='up' action='pfkey' id='7' />
	<scroll direction='down' action='pfkey' id='8' />

	<!---
	<scroll direction='left' />
	<scroll direction='right' />
	--->

	<accelerator name='PageDown' action='pfkey' id='8' group='online' key='Page_Down' />
	<accelerator name='ShiftPageDown' action='pfkey' id='24' group='online' key='<Shift>Page_Down' />

	<accelerator name='PageUP' action='pfkey' id='7' group='online' key='Page_Up' />
	<accelerator name='ShiftPageUP' action='pfkey' id='23' group='online' key='<Shift>Page_Up' />

</ui>

