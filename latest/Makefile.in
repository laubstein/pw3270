#---[ Configuration values ]---------------------------------------------------

PACKAGE_NAME=@PACKAGE_NAME@
prefix=@prefix@
exec_prefix=@exec_prefix@
bindir=$(BINDIR)
sbindir=@sbindir@
libdir=@libdir@
includedir=@includedir@
datarootdir=@datarootdir@
localedir=@localedir@
BINDIR=@BINDIR@

CC = @CC@
LD = @LD@
HOST_CC = @HOST_CC@

MAKENSIS=@MAKENSIS@
STRIP=@STRIP@

CFLAGS=@CFLAGS@
DBG_CFLAGS=-DDEBUG=1
RLS_CFLAGS=-DNDEBUG=1

DLL_CFLAGS=@DLL_CFLAGS@
DLL_LDFLAGS=@DLL_LDFLAGS@

GLIB_CFLAGS=@GLIB_CFLAGS@
GLIB_LIBS=@GLIB_LIBS@

GTK_CFLAGS=@GTK_CFLAGS@
GTK_LIBS=@GTK_LIBS@

CAIRO_CFLAGS=@CAIRO_CFLAGS@
CAIRO_LIBS=@CAIRO_LIBS@

GNOME_CFLAGS=@GNOME_CFLAGS@
GNOME_LIBS=@GNOME_LIBS@

SSL_CFLAGS=@SSL_CFLAGS@
SSL_LIBS=@SSL_LIBS@

IGEMAC_CFLAGS=@IGEMAC_CFLAGS@
IGEMAC_LIBS=@IGEMAC_LIBS@

PLUGINS=@PLUGINS@
LIBRARIES=@LIBRARIES@

LIB3270_CFLAGS=-I@SRCDIR@/include -DDATAROOTDIR=\"$(datarootdir)\" -DLOCALEDIR=\"$(localedir)\"
LIB3270_LIBS=-L$(BINDIR)/Release/lib -l3270
LIB3270_DBGLIBS=-L$(BINDIR)/Debug/lib -l3270 -Wl,-rpath,$(BINDIR)/Debug/lib 

GLOBAL_DEPENDS=src/include/*.h src/include/lib3270/*.h Makefile
DBG_MAKE="LIB3270_CFLAGS=$(LIB3270_CFLAGS)" LIB3270_LIBS="$(LIB3270_DBGLIBS)" GLOBAL_DEPENDS="$(BINDIR)/Debug/lib/lib3270@DLLEXT@"
RLS_MAKE="LIB3270_CFLAGS=$(LIB3270_CFLAGS)" LIB3270_LIBS="$(LIB3270_LIBS)" GLOBAL_DEPENDS="$(BINDIR)/Release/lib/lib3270@DLLEXT@"

#---[ Sources ]----------------------------------------------------------------

GTK2_SRCS =	main.c iocallback.c terminal.c screen.c mouse.c \
		clipboard.c print.c config.c colors.c plugin.c filetransfer.c fonts.c \
		version.c draw.c tracewindow.c commands.c script.c oia.c \
		cursor.c action_calls.c @GUI_SRCS@
#  @OS_APPSRCS@ @UI_SRCS@

LIB_SRCS = 	XtGlue.c actions.c ansi.c apl.c charset.c ctlr.c \
		ft.c ft_cut.c ft_dft.c glue.c host.c icmd.c kybd.c \
		print.c printer.c proxy.c resources.c rpq.c screen.c see.c \
		sf.c tables.c telnet.c toggles.c trace_ds.c utf8.c util.c \
		xio.c resolver.c log.c paste.c @LIB_SRCS@
# @OS_APISRCS@

#---[ Rules ]------------------------------------------------------------------

@OBJDIR@/Debug/src/lib/%@OBJEXT@: src/lib/%.c src/lib/*.h $(GLOBAL_DEPENDS)
	@echo $< ...
	@mkdir -p `dirname $@`
	@$(CC) -DLIB3270=1 $(DBG_CFLAGS) $(CFLAGS) $(LIB3270_CFLAGS) $(DLL_CFLAGS) $(SSL_CFLAGS) -Isrc/include/lib3270 -o $@ -c $<

@OBJDIR@/Debug/src/gtk2/%@OBJEXT@: src/gtk2/%.c src/gtk2/*.h $(GLOBAL_DEPENDS)
	@echo $< ...
	@mkdir -p `dirname $@`
	@$(CC) $(DBG_CFLAGS) $(CFLAGS) $(LIB3270_CFLAGS) $(GNOME_CFLAGS) $(IGEMAC_CFLAGS) $(GLIB_CFLAGS) $(CAIRO_CFLAGS) $(GTK_CFLAGS) -o $@ -c $<

@OBJDIR@/Debug/version@OBJEXT@: src/version.c
	@echo $< ...
	@mkdir -p `dirname $@`
	@$(CC) $(DBG_CFLAGS) $(CFLAGS) -o $@ -c $<

@OBJDIR@/Release/src/lib/%@OBJEXT@: src/lib/%.c src/lib/*.h $(GLOBAL_DEPENDS)
	@echo $< ...
	@mkdir -p `dirname $@`
	@$(CC) -DLIB3270=1 $(RLS_CFLAGS) $(CFLAGS) $(LIB3270_CFLAGS) $(DLL_CFLAGS) $(SSL_CFLAGS) -Isrc/include/lib3270 -o $@ -c $<

@OBJDIR@/Release/src/gtk2/%@OBJEXT@: src/gtk2/%.c src/gtk2/*.h $(GLOBAL_DEPENDS)
	@echo $< ...
	@mkdir -p `dirname $@`
	@$(CC) $(RLS_CFLAGS) $(CFLAGS) $(LIB3270_CFLAGS) $(GNOME_CFLAGS) $(IGEMAC_CFLAGS) $(GLIB_CFLAGS) $(CAIRO_CFLAGS) $(GTK_CFLAGS) -o $@ -c $<

@OBJDIR@/Release/version@OBJEXT@: src/version.c
	@echo $< ...
	@mkdir -p `dirname $@`
	@$(CC) $(RLS_CFLAGS) $(CFLAGS) -o $@ -c $<

#---[ Plugins & Libraries ]----------------------------------------------------

$(BINDIR)/Debug/plugins/rx3270@DLLEXT@: $(BINDIR)/Debug/lib/lib3270@DLLEXT@ src/plugins/rexx/*
	@$(MAKE) $(DBG_MAKE) -C src/plugins/rexx $@

$(BINDIR)/Debug/librx3270@DLLEXT@: $(BINDIR)/Debug/lib/lib3270@DLLEXT@ src/plugins/rexx/*
	@$(MAKE) $(DBG_MAKE) -C src/plugins/rexx $@

$(BINDIR)/Debug/libpw3270_jni@DLLEXT@: $(BINDIR)/Debug/lib/lib3270@DLLEXT@ src/java/*
	@$(MAKE) $(DBG_MAKE) -C src/java $@


$(BINDIR)/Release/plugins/rx3270@DLLEXT@: $(BINDIR)/Release/lib/lib3270@DLLEXT@ src/plugins/rexx/*
	@$(MAKE) $(RLS_MAKE) -C src/plugins/rexx $@

$(BINDIR)/Release/librx3270@DLLEXT@: $(BINDIR)/Release/lib/lib3270@DLLEXT@ src/plugins/rexx/*
	@$(MAKE) $(RLS_MAKE) -C src/plugins/rexx $@

$(BINDIR)/Release/libpw3270_jni@DLLEXT@: $(BINDIR)/Release/lib/lib3270@DLLEXT@ src/java/*
	@$(MAKE) $(DBG_MAKE) -C src/java $@

#---[ Targets ]----------------------------------------------------------------

$(BINDIR)/Release/@PROGRAM_NAME@@EXEEXT@: $(BINDIR)/Release/lib/lib3270@DLLEXT@ $(foreach SRC, $(basename $(GTK2_SRCS)), @OBJDIR@/Release/src/gtk2/$(SRC)@OBJEXT@)
	@echo $@ ...
	@mkdir -p `dirname $@`
	@$(LD) -o $@ $^ $(LIB3270_LIBS) $(GNOME_LIBS) $(IGEMAC_LIBS) $(GLIB_LIBS) $(CAIRO_LIBS) $(GTK_LIBS)
	@$(STRIP) $@

$(BINDIR)/Release/lib/lib3270@DLLEXT@: @OBJDIR@/Release/version@OBJEXT@ $(foreach SRC, $(basename $(LIB_SRCS)), @OBJDIR@/Release/src/lib/$(SRC)@OBJEXT@) @OBJDIR@/fallbacks@OBJEXT@
	@echo $@ ...
	@mkdir -p `dirname $@`
	@rm -f $(basename \$(@F)).a
	@rm -f $(basename \$(@F)).def
	@$(LD) $(DLL_LDFLAGS) -o $@ $^ $(SSL_LIBS)
	@$(STRIP) $@

$(BINDIR)/Debug/@PROGRAM_NAME@@EXEEXT@: $(BINDIR)/Debug/lib/lib3270@DLLEXT@ $(foreach SRC, $(basename $(GTK2_SRCS)), @OBJDIR@/Debug/src/gtk2/$(SRC)@OBJEXT@)
	@echo $@ ...
	@mkdir -p `dirname $@`
	@$(LD) -o $@ $^ $(LIB3270_DBGLIBS) $(GNOME_LIBS) $(IGEMAC_LIBS) $(GLIB_LIBS) $(CAIRO_LIBS) $(GTK_LIBS)

$(BINDIR)/Debug/lib/lib3270@DLLEXT@: @OBJDIR@/Debug/version@OBJEXT@ $(foreach SRC, $(basename $(LIB_SRCS)), @OBJDIR@/Debug/src/lib/$(SRC)@OBJEXT@) @OBJDIR@/fallbacks@OBJEXT@
	@echo $@ ...
	@mkdir -p `dirname $@`
	@rm -f $(basename \$(@F)).a
	@rm -f $(basename \$(@F)).def
	@$(LD) $(DLL_LDFLAGS) -o $@ $^ $(SSL_LIBS)

src/version.c:	src/lib/*.c src/mkversion.sh Makefile $(GLOBAL_DEPENDS)
	@echo $@ ...
	@src/mkversion.sh

@OBJDIR@/fallbacks@OBJEXT@: $(BINDIR)/mkfb@EXEEXT@ src/lib/X3270.xad
	@echo $@ ...
	@mkdir -p `dirname $@`
	@$(BINDIR)/mkfb@EXEEXT@ -c src/lib/X3270.xad @OBJDIR@/falbacks.c
	@$(CC) -DLIB3270=1 $(RLS_CFLAGS) $(CFLAGS) -Isrc/lib -Isrc/include -o $@ -c @OBJDIR@/falbacks.c

$(BINDIR)/mkfb@EXEEXT@: src/lib/mkfb.c Makefile
	@echo $@ ...
	@mkdir -p `dirname $@`
	@$(HOST_CC) -g -o $@ -D_WIN32 src/lib/mkfb.c

@PROGRAM_LOGO@: image/@PROGRAM_LOGO@
	@echo $@ ...
	@cp image/@PROGRAM_LOGO@ @PROGRAM_LOGO@

Debug:	$(BINDIR)/Debug/@PROGRAM_NAME@@EXEEXT@ \
	@PROGRAM_LOGO@ \
	$(foreach PLUGIN, $(PLUGINS), $(BINDIR)/Debug/plugins/$(PLUGIN)@DLLEXT@) \
	$(foreach LIB, $(LIBRARIES), $(BINDIR)/Debug/$(LIB)@DLLEXT@)

Release: $(BINDIR)/Release/@PROGRAM_NAME@@EXEEXT@ \
		@PROGRAM_LOGO@ \
		$(foreach PLUGIN, $(PLUGINS), $(BINDIR)/Release/plugins/$(PLUGIN)@DLLEXT@) \
		$(foreach LIB, $(LIBRARIES), $(BINDIR)/Release/$(LIB)@DLLEXT@)


run: Debug
	@$(BINDIR)/Debug/@PROGRAM_NAME@@EXEEXT@ --program-data="$(PWD)" --model=5 --plugin-path=$(BINDIR)/Debug/plugins

distclean: clean
	@rm -f src/version.c
	@rm -f src/gtk2/version.c
	@rm -f src/include/lib3270/plugins.h
	@rm -f *.tar.gz
	@rm -f *.src.rpm
	@rm -f *.pc
	@rm -f *.nsi
	@rm -f *.spec
	@rm -f *.desktop
	@rm -f src/gtk2/resources.rc
	@rm -f src/gtk2/version.c
	@rm -f src/oxt/description.xml
	@rm -f src/oxt/manifest.xml
	@rm -f version
	@rm -f src/plugins/rexx/Makefile
	@rm -f src/include/lib3270/plugins.h
	@rm -f *.log
	@rm -f *.layout
	@rm -f src/include/lib3270/config.h
	@find ./src -name "Makefile" -exec rm -f {} \;

clean:
	@rm -fr .obj
	@rm -fr .bin
	@rm -f @PROGRAM_LOGO@

	@$(MAKE) -C src/java clean

	@find . -name "*@OBJEXT@" -exec rm -f {} \;
	@find . -name "*@DLLEXT@" -exec rm -f {} \;
	@find . -name "*.tmp" -exec rm -f {} \;
	@find . -name "*.a" -exec rm -f {} \;
	@find . -name "*.def" -exec rm -f {} \;

